{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "removeComments": false,
		"types": ["vue-typescript-import-dts", "@types/jqueryui"],
    "allowSyntheticDefaultImports": true,
		"skipLibCheck": true
  },
  "include": [
    "resources/assets/js/**/*.ts",
		"resources/assets/js/**/*.vue"
  ],
  "compileOnSave": false
}
